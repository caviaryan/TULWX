<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
	<view slot="content">个人信息</view>
</cu-custom>
<form>
	<view class="cu-bar bg-white solid-bottom margin-top">
		<view class="action">
			<text class="cuIcon-titles text-orange "></text> 完善个人信息
		</view>
	</view>
	<view class="cu-form-group">
		<view class="title">姓名</view>
		<input placeholder="请输入姓名"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">年龄</view>
		<input placeholder="请输入年龄"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">手机号</view>
		<input placeholder="手机号" value="{{tel}}"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">身份证号</view>
		<input placeholder="身份证号"></input>
	</view>
	<view class="cu-form-group margin-top">
		<view class="title">所在地</view>
		<picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
			<view class="picker">
				{{region[0]}}，{{region[1]}}，{{region[2]}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="title">糖尿病类型</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'...'}}
			</view>
		</picker>
	</view>
	<view class="padding-xl margin-top">
		<button class="cu-btn block bg-blue margin-tb-sm lg" bindtap="submitUser">
			<text class="cuIcon-friendaddfill" ></text> 提交信息</button>
	</view>
</form>